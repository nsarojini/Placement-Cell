<!-- add interview form -->
<% if (locals.user) {%>
  <div class="container mt-4 col-md-6">
    <div class="intro">
      <div class="card gradient-custom" style="border-radius: 1rem;">
        <form class="row g-4 mt-4 p-3" style="--bs-border-opacity: 0.5" action="/interview/create" method="POST">

          <h4>Add Interview </h4>
          <div class="col-12">
            <label for="company" class="form-label">Company</label>
            <input type="text" class="form-control" placeholder="Enter company name" id="company" name="company"
              required />
          </div>

          <div class="col-12">
            <label for="date" class="form-label">Date</label>
            <input type="date" class="form-control" placeholder="Enter student email" id="date" name="date" required />
          </div>

          <div class="text-center py-2">
            <button class="btn btn-light btn-lg btn-rounded px-4" type="submit">Add Interview</button>
          </div>

        </form>
      </div>
    </div>
  </div>
  <%} %>
