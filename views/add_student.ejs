
<!-- css link -->
<link rel="stylesheet" href="../css/loginpage.css">
<!-- add student form -->
<% if (locals.user) {%>
  <div class="container mt-4 col-md-6">
    <div class="intro">
      <div class="card gradient-custom" style="border-radius: 1rem;">
        <form class="row g-4 mt-4 p-3" style="--bs-border-opacity: 0.5" action="/student/create" method="POST">

          <h4>Add Student</h4>
          <div class="col-12">
            <label for="name" class="form-label">Name</label>
            <input type="text" class="form-control" placeholder="Enter student name" id="name" name="name" required />
          </div>

          <div class="col-12">
            <label for="email" class="form-label">Email</label>
            <input type="text" class="form-control" placeholder="Enter student email" id="email" name="email"
              required />
          </div>

          <div class="col-12">
            <label for="college" class="form-label">College</label>
            <input type="text" class="form-control" placeholder="Enter student college" id="college" name="college"
              required />
          </div>

          <div class="col-md-6">
            <label for="placement-status" class="form-label">Placement status</label>
            <select id="placement-status" class="form-select" required name="placement_status">
              <option selected>Not placed</option>
              <option>Placed</option>
            </select>
          </div>

          <div class="col-md-6">
            <label for="batch" class="form-label">Batch</label>
            <input type="text" class="form-control" id="batch" placeholder="Enter batch no." name="batch" required />
          </div>

          <div class="col-md-4">
            <label for="dsa-score" class="form-label">DSA score</label>
            <input type="number" class="form-control" id="dsa-score" name="dsa_score" required />
          </div>

          <div class="col-md-4">
            <label for="webdev-score" class="form-label">WebDev score</label>
            <input type="number" class="form-control" id="webdev-score" name="webdev_score" required />
          </div>

          <div class="col-md-4">
            <label for="react-score" class="form-label">React score</label>
            <input type="number" class="form-control" id="react-score" name="react_score" required />
          </div>

          <div class="text-center py-2">
            <button class="btn btn-light btn-lg btn-rounded px-4" type="submit">Add Student</button>
          </div>

        </form>
      </div>
    </div>
  </div>
  <%} %>
